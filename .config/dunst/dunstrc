[global]
    format = "<b>%s</b>\n%b"
    font = Roboto 11.5

    background = "#222525"
    foreground = "#eaeaea"
    frame_color = "#909090"

    timeout = 15
    ignore_dbusclose = true # For example, makes discord obey timeout set here

    show_indicators = false
    icon_position = off

    origin = top-center
    offset = 0x6
    width = (0, 300)
    horizontal_padding = 11
    frame_width = 1
    separator_height = 1

    sort = no
    show_age_threshold = -1
    stack_duplicates = false
    notification_limit = 18

    mouse_left_click = do_action, close_current

    enable_posix_regex = true

[urgency_low]
    # Default

[urgency_normal]
    # Default

[urgency_critical]
    foreground = "#e8c47b"
    timeout = 0

[history_ignore]
    # Send a notification that doesn't get saved to history:
    # notify-send -c history_ignore <summary> <body>
    category = "history_ignore"
    history_ignore = true

[volume]
    stack_tag = "volume"
    history_ignore = true
    format="<span font="Alt Hack Nerd Font 10.5">%s</span>"

[brightness]
    stack_tag = "brightness"
    history_ignore = true
    format="<span font="Alt Hack Nerd Font 10.5">%s</span>"

