# Fix not being able to follow URLs
# https://git.pwmt.org/pwmt/zathura/-/issues/151
set sandbox none

set selection-clipboard clipboard

set window-title-basename "true"
set window-title-page "true"

set statusbar-home-tilde "true"

set font "Alt Hack Nerd Font 11"

set vertical-center "true"

# Hide statusbar (bottom row) by default: toggle with <C-n>
set guioptions ""

# Keymaps
map <C-Tab> toggle_index
map <Tab> focus_inputbar / # Search (forward)

map [index] <C-Tab> toggle_index
unmap [index] <Tab> # Weird behavior: now pressing tab in index mode starts
                    # some kind of a floating search field
                    # Could not figure out why, but it is actually useful!
                    # A clue: it's the same as when starting to type in
                    # PCManFM file manager

# goodnight colors:

set default-bg                  "#0f0f0f"
set default-fg                  "#d0d0d0"

set statusbar-bg                "#0f0f0f"
set statusbar-fg                "#d0d0d0"

set inputbar-bg                 "#0f0f0f"
set inputbar-fg                 "#d0d0d0"

set notification-bg             "#0f0f0f"
set notification-fg             "#d0d0d0"

set notification-error-bg       "#0f0f0f"
set notification-error-fg       "#c25d5d"

set notification-warning-bg     "#0f0f0f"
set notification-warning-fg     "#c25d5d"

set completion-bg               "#0f0f0f"
set completion-fg               "#7d9fbd"
set completion-group-bg         "#0f0f0f"
set completion-group-fg         "#d0d0d0"

set completion-highlight-fg     "#0f0f0f"
set completion-highlight-bg     "#7d9fbd"

set index-fg                    "#d0d0d0"
set index-bg                    "#0f0f0f"
set index-active-fg             "#0f0f0f"
set index-active-bg             "#a7bd68"

# Search highlight colors same as in Vivaldi:

set highlight-color             "#ffff00"
set highlight-active-color      "#ff9632"
