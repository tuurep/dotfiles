/* Using this to modify Discord client is against Discord's ToS  */


/* Hide chat textfield buttons other than emoji */

button[aria-label="Send a gift"] {
    display: none;
}

button[aria-label="Open GIF picker"] {
    display: none;
}

button[aria-label="Open sticker picker"] {
    display: none;
}

/* Hide Super Reaction button */

div[aria-label="Add Super Reaction"] {
    display: none;
}

/* Hide Nitro Shops in inappropriate place */

a[data-list-item-id$="___nitro"] {
    display: none;
}

a[data-list-item-id$="___shop"] {
    display: none;
}

/* Hide blue notice at top about BetterDiscord updates */

.bd-notice-info {
    display: none;
}
