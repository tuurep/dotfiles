[user]
    email = tuure.piitulainen@gmail.com
    name = Tuure Piitulainen

[alias]
    s = status
    a = add
    aa = add --update
    c = commit
    ca = commit --amend
    p = push
    d = diff
    ds = diff --staged
    rs = restore --staged
    l = log
    f = fetch
    r = remote
    b = branch
    co = checkout
    rb = rebase

[pull]
    ff = only
    prune = true

[push]
    autoSetupRemote = true

[fetch]
    prune = true

[color.diff]
    meta = brightblack
    func = cyan
    frag = cyan

[advice]
    defaultBranchName = false
    detachedHead = false
